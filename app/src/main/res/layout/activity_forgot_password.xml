<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#EC028D"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/back"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center|left"
            android:background="@drawable/arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot your password ?"
            android:textAlignment="center"
            android:id="@+id/Parentsapp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="bottom|center"
        android:layout_weight="0.4">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find your account"
                android:textSize="16sp"
                android:gravity="center"

                android:textColor="#EC028D"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We can help you reset your password \n using your email address linked account."
                android:textSize="14sp"
                android:gravity="center"
android:layout_margin="5dp"
                android:textColor="@color/blackscreen"/>


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:padding="7dp"
        android:orientation="vertical"
        android:layout_weight="0.6">
        <EditText
            android:layout_width="300dp"
            android:layout_height="42dp"
            android:hint="Email Address"
            android:textSize="13sp"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:textColorHint="#AEAEAE"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:background="@drawable/rounded_border"

            />
        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
           android:layout_marginTop="30dp"
            android:id="@+id/next"
            android:text="Forgot Password"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:background="#EC028D"

            />

    </LinearLayout>
</LinearLayout>


