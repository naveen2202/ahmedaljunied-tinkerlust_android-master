<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">


        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/productImagePager"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="bottom|center">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/imageview1"
                android:background="@drawable/whitecircle"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/imageview2"
                android:layout_marginLeft="5dp"
                android:background="@drawable/lightcircleimage"

                />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/imageview3"

                android:layout_marginLeft="5dp"
                android:background="@drawable/lightcircleimage"
                />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/imageview4"
                android:layout_marginLeft="5dp"
                android:background="@drawable/lightcircleimage"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/heartLike"
                android:src="@drawable/like"
                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/share"
                android:layout_marginTop="15dp"
                android:src="@drawable/share"
                />

        </LinearLayout>



</FrameLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="15dp"
    android:weightSum="2">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NANETTE Lepore"
            android:textAllCaps="true"
            android:id="@+id/name"
            android:textSize="15sp"
            android:padding="2dp"
            android:textColor="#2d2d2d"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2d2d2d"
            android:textSize="13sp"
            android:id="@+id/shortDescription"
            android:padding="2dp"
            android:text="Pink Textured Blazzer"


            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#9b9b9b"
            android:padding="2dp"
            android:textSize="11sp"
            android:id="@+id/Availability"
            android:text="Avalability : In Stock"
            />


    </LinearLayout>
   <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp">

       <LinearLayout
           android:gravity="end|center_vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="2dp"
           >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size : "
            android:textAllCaps="true"
            android:textSize="12sp"
            android:paddingRight="2dp"
            android:textColor="#2d2d2d"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXS"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:paddingLeft="2dp"
            android:paddingRight="10dp"

            android:textColor="#2c2c2c"/>
           <ImageView
               android:layout_width="15dp"
               android:layout_height="15dp"
               android:src="@drawable/question"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="2dp"
           android:gravity="end|center_vertical"
           >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2d2d2d"
            android:textSize="12sp"
            android:text="Condition : "
            />
           <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2d2d2d"
            android:textSize="14sp"
            android:paddingLeft="2dp"
               android:id="@+id/condition"
               android:paddingRight="10dp"
            android:text="Perfect"
           android:textStyle="bold"
            />
<ImageView
    android:layout_width="15dp"
    android:layout_height="15dp"
    android:src="@drawable/question"/>
       </LinearLayout>


    </LinearLayout>


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layoutProductDetail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="6dp"
            android:layout_gravity="center_vertical"
            android:background="#303030"
            app:tabTextColor="#808080"
            app:tabSelectedTextColor="#FFF"
            app:tabPaddingEnd="10dp"
            app:tabIndicatorColor="#ebedf1"
            app:tabMode="scrollable"
            />

        <android.support.v4.view.ViewPager
            android:id="@+id/pagerProductDetails"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />




    </LinearLayout>










</LinearLayout>